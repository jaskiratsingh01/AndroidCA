<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ques2bg"
    tools:context=".question2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signin"
        android:text="Sign In"
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#ff0000"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:id="@+id/username"
        android:layout_below="@+id/signin"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000"
        android:textColorHint="#ff0000"
        android:inputType="text"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000"
        android:textColorHint="#ff0000"
        android:inputType="textPassword"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderTextview"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:textColor="#ff0000"
        android:text="Gender:"
        android:textSize="25sp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiogrp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/genderTextview">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/radiomale"
            android:textSize="20sp"
            android:layout_marginHorizontal="40dp"
            android:textColor="#ff0000"
            android:gravity="center"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/radiofemale"
            android:textSize="20sp"
            android:layout_marginHorizontal="40dp"
            android:textColor="#ff0000"
            android:gravity="center"/>

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expertise"
        android:layout_below="@+id/radiogrp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:textColor="#ff0000"
        android:text="Choose Expertise:"
        android:textSize="23sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check1"
        android:layout_below="@id/expertise"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/php"
            android:text="PHP"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#ff0000"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/net"
            android:text=".NET"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#ff0000"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bootstrap"
            android:text="Bootstrap"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#ff0000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check2"
        android:layout_below="@id/check1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/html"
            android:text="HTML"
            android:textSize="16sp"
            android:textColor="#ff0000"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/css"
            android:text="CSS"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#ff0000"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/java"
            android:text="Java"
            android:layout_marginHorizontal="20dp"
            android:textSize="16sp"
            android:textColor="#ff0000"/>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/submitbtn"
        android:layout_below="@id/check2"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:background="@drawable/submitbtnbg"/>



</RelativeLayout>